@startuml
!include ../style.puml
skinparam ArrowFontStyle plain
skinparam SequenceBoxFontColor Black

box Logic LOGIC_COLOR_T1
participant ":LogicManager" as LogicManager LOGIC_COLOR
participant ":AppParser" as AppParser LOGIC_COLOR
participant ":EventEditCommandParser" as EventEditCommandParser LOGIC_COLOR
participant "e:EventEditCommand" as EventEditCommand LOGIC_COLOR
participant "r:CommandResult" as CommandResult LOGIC_COLOR
end box

box Model MODEL_COLOR_T1
participant "m:Model" as Model MODEL_COLOR
end box

[-> LogicManager : execute("event edit 1 ""--status"" ongoing")
activate LogicManager

LogicManager -> AppParser : parseCommand("event edit 1 ""--status"" ongoing")
activate AppParser

AppParser -> EventEditCommandParser : parse("1 ""--status"" ongoing")
activate EventEditCommandParser

create EventEditCommand
EventEditCommandParser -> EventEditCommand
activate EventEditCommand

EventEditCommand --> EventEditCommandParser : e
deactivate EventEditCommand

EventEditCommandParser --> AppParser : e
deactivate EventEditCommandParser

AppParser --> LogicManager : e
deactivate AppParser

LogicManager -> EventEditCommand : execute(m)
activate EventEditCommand

EventEditCommand -> Model : getFilteredEventList()
activate Model

Model --> EventEditCommand : eventList
deactivate Model

EventEditCommand -> EventEditCommand : createEditedEvent()
activate EventEditCommand
EventEditCommand --> EventEditCommand : editedEvent
deactivate EventEditCommand

EventEditCommand -> Model : setEvent(eventToEdit, editedEvent)
activate Model
Model --> EventEditCommand
deactivate Model

EventEditCommand -> Model : updateFilteredEventList()
activate Model
Model --> EventEditCommand
deactivate Model

EventEditCommand --> LogicManager : CommandResult
deactivate EventEditCommand

[<--LogicManager
deactivate LogicManager
@enduml
