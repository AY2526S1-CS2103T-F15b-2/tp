@startuml
!include ../style.puml
skinparam classAttributeIconSize 0

skinparam class {
    BackgroundColor White
    BorderColor Black
    FontColor Black
}

skinparam enum {
    BackgroundColor LightYellow
    BorderColor Black
    FontColor Black
}

package "Model" <<Rectangle>> {
    class Event {
        - status: EventStatus
        - tags: Set<Tag>
        - participants: List<Participant>
    }

    enum EventStatus {
        STARTING
        ONGOING
        CLOSED
    }

    class Participant {
        - contact: Contact
        - status: Status
    }

    enum Status {
        ATTENDING
        CANCELLED
        UNKNOWN
    }

    class Tag {
        - tagName: String
    }
}

Event "1" --> "1" EventStatus : has >
Event "1" *--> "*" Tag : contains >
Event "1" *--> "*" Participant : contains >
Participant "1" --> "1" Status : has >

note right of EventStatus
  Event status tracks the
  lifecycle of an event:
  - STARTING: Initial planning
  - ONGOING: Event in progress
  - CLOSED: Event concluded
end note

note right of Status
  Participant status tracks
  attendance for a contact:
  - ATTENDING: Confirmed
  - CANCELLED: Not attending
  - UNKNOWN: No response
end note

@enduml
