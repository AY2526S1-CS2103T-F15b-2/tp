@startuml
!include ../style.puml
skinparam ActivityFontSize 15
skinparam ActivityDiamondFontSize 12

start
:User enters event edit command;

:Parse index and parameters;

if (Valid index and at least one parameter?) then (yes)
  :Retrieve event;
  if (Event exists?) then (yes)
    :Validate parameters;
    if (All valid?) then (yes)
      :Create edited event;
      if (Not duplicate?) then (yes)
        :Update event in list;
        :Display success;
      else (no)
        :Error: Duplicate event;
      endif
    else (no)
      :Error: Invalid parameters;
    endif
  else (no)
    :Error: Event not found;
  endif
else (no)
  :Error: Invalid command;
endif

stop

@enduml
